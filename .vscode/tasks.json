{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build all files",
            "command": "g++",
            "args": [
                "-g",
                "-I${fileDirname}\\InputHandler",
                "-I${fileDirname}\\CommandDispatcher",
                "-I${fileDirname}\\SSHConnection",
                "main.cpp",
                "InputHandler\\InputHandler.cpp",
                "CommandDispatcher\\CommandDispatcher.cpp",
                "SSHConnection\\SSHConnection.cpp",
                "-o",
                "${fileDirname}\\cartographer.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: g++.exe"
        }
    ]
}